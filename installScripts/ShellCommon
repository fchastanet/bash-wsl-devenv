Compiler::Embed::extractFileFromBase64 "${PERSISTENT_TMPDIR:-/tmp}/58bad5479dda77204434726383fd317d/inputrc" "" "644"

declare -gx embed_file_inputrc="${PERSISTENT_TMPDIR:-/tmp}/58bad5479dda77204434726383fd317d/inputrc"
